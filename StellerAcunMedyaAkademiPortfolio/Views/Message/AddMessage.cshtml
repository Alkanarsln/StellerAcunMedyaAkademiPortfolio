@model StellerAcunMedyaAkademiPortfolio.Models.TblMessage
@{
    ViewBag.Title = "AddMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddMessage</h2>

<br />
<form method="post">
    <input type="text" name="NameSurname" class="form-control" placeholder="İsim Soyisim Giriniz" required />
    <br />
    <input type="text" name="MessageContent" class="form-control" placeholder="Mesajınızı Giriniz" required />
    <br />
    <input type="email" name="Email" class="form-control" placeholder="Email Giriniz" required />
    <br />
    <button class="btn btn-outline-warning">Kaydet</button>
</form>
