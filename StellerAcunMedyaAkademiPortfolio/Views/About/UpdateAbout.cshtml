@model StellerAcunMedyaAkademiPortfolio.Models.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Hakkımda Güncelleme Sayfası</h3>
<br />

<form method="post">
    <input type="hidden" name="AboutID" value="@Model.AboutID" />
    <label>Resim Url</label>
    <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl" />
    <br />
    <label>Ad Soyad</label>
    <input type="text" name="NameSurname" class="form-control" value="@Model.NameSurname" />
    <br />
    <label>Unvan </label>
    <input type="text" name="Title" class="form-control" value="@Model.Title"/>
    <br />
    <label>Başlık </label>
    <input type="text" name="Description" class="form-control" value="@Model.Description" />
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>