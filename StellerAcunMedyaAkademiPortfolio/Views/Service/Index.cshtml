@model List<StellerAcunMedyaAkademiPortfolio.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Hizmetlerim</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Icon</th>
        <th>Hizmet Adı </th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ServiceIconUrl" style="height:50px; width:50px" /></td>
            <td>@item.ServiceName</td>
            <td>@(item.ServiceStatus == true ? "Aktif" : "Pasif" )</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Service/MakeActive/@item.ServiceId" class="btn btn-outline-success">Aktif Yap</a></td>
            <td><a href="/Service/MakePassive/@item.ServiceId" class="btn btn-outline-secondary">Pasif Yap</a></td>

        </tr>
    }
</table>
<br />
<a href="/Service/AddService" class="btn btn-outline-primary">Yeni Hizmet Bilgisi Ekle</a>
